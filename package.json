{
  "name": "autodoc-agent-gemini",
  "displayName": "Auto-Doc-Agent (Gemini Edition)",
  "description": "AI Agent that generates, executes, fixes, and previews documentation with code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:autodoc-sidebar-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autodoc-sidebar-view",
          "title": "Auto-Doc Agent",
          "icon": "media/gemini-icon.svg"
        }
      ]
    },
    "views": {
      "autodoc-sidebar-view": [
        {
          "type": "webview",
          "id": "autodoc-sidebar",
          "name": "Gemini Agent",
          "icon": "media/gemini-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "autodoc.start",
        "title": "Auto-Doc: Start Agent"
      }
    ],
    "configuration": {
      "title": "Auto-Doc Agent",
      "properties": {
        "autodoc.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Google Gemini"
        },
        "autodoc.gemini.model": {
          "type": "string",
          "default": "gemini-2.0-flash-exp",
          "enum": [
            "gemini-2.0-flash-exp",
            "gemini-1.5-pro",
            "gemini-1.5-flash"
          ],
          "description": "Gemini Model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^17.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.33",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}